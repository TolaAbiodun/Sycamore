{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "target": "es2015",
    "jsx": "react-jsx",
    "noEmit": true,
    "moduleResolution": "Node16",
    "module": "Node16",
    "importHelpers": true,
    "lib": ["es2015", "es2016", "es2021"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "_assets": ["src/assets/*"],
      "_components": ["src/components/*"],
      "_navigation": ["src/navigation/*"],
      "_screens": ["src/screens/*"],
      "_styles": ["src/styles/*"],
      "_utils": ["src/utils/*"]
    },
  }
}
